<div class="grp-container">
  <div class="grp-form">

    <%= simple_form_for [@subject, @group] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs grp-inputs">
        <%= f.input :title %>
        <%= f.input :description %>

        <%#= f.input :organizer %>

        <%= f.input :timeline %>
        <%= f.input :location %>

        <%#= f.association :user %>

        <%#= f.association :subject %>
      </div>

      <div class="form-actions" style="text-align: center; padding: 10px;">
        <%= f.button :submit, class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>

</div>
