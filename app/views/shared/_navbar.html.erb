
<div class="navbar navbar-expand-sm navbar-lewagon" style= "background-color: #9D7ED0; opacity: 0.9; z-index:1000">
  <h2>LearnUp</h2>
<!--     <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
 -->

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active" style="margin-right: 10px">
          <%= link_to "Home", root_path, class: "btn-home"%>
        </li>
        <li class="nav-item btn-signup" style="margin-right: 10px">
          <%= link_to "Messages", '#', class: "btn-signup"%>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.photo_url || "https://cn.bing.com/th?id=OIP.vFYAYMSIurPqs1eV7L0GpwHaHa&pid=Api&rs=1", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", users_profile_path, class: "dropdown-item" %>
            <%= link_to "Update my profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "btn-home"%>
          <%= link_to "Login", new_user_session_path, class: "btn-login" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn-signup" %>

        </li>
      <% end %>
    </ul>
  </div>
</div>
